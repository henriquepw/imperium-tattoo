package pages

import "github.com/henriquepw/imperium-tattoo/web/view/layout"

templ NotFoundPage() {
	@layout.Base("Não Encontrado") {
		<main class="p-4 md:p-8" hx-bosted>
			<section class="card bg-error-2 border-error-6 flex flex-col">
				<h1 class="font-bold text-2xl text-error-11">Error 404</h1>
				<h2 class="font-bold text-3xl mb-8">Página não encontrada</h2>
				<a href="/dashboard" class="btn-primary text-md mr-auto">Ir para tela principal</a>
			</section>
		</main>
	}
}
